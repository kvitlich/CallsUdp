<Window x:Class="CallsUdp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CallsUdp"
        mc:Ignorable="d"
        Closing="AppClosing"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Height="60" Width="320" Margin="0,0,0,220" Text="Введите Ip адресс: " FontStretch="Medium" FontSize="32"></TextBlock>
        <TextBox x:Name="destinationIp" Height="30" Width="220" Margin="0,0,0,100"/>
        <Button x:Name="startButton" Content="Start" FontSize="16" Click="Start"  Height="25" Width="110" Margin="160,100,0,0"/>
        <Button x:Name="stopButton" Content="Stop" FontSize="16" Click="Stop"  Height="25" Width="110" Margin="0,100,160,0"/>
    </Grid>
</Window>
